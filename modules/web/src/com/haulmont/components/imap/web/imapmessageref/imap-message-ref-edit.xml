<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.components.imap.web.imapmessageref.ImapMessageRefEdit"
        datasource="imapMessageRefDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.components.imap.web.imapmessageref">
    <dsContext>
        <datasource id="imapMessageRefDs"
                    class="com.haulmont.components.imap.entity.ImapMessageRef"
                    view="msg-ref-full"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="imapMessageRefDs" editable="false">
            <column width="250px">
                <field property="folder"/>
                <field property="msgUid"/>
                <field property="threadId"/>
                <field property="referenceId"/>
                <field property="caption"/>
                <field property="deleted"/>
                <field property="flagged"/>
                <field property="answered"/>
                <field property="seen"/>
                <field property="updatedTs"/>
            </column>
        </fieldGroup>
        <hbox spacing="true" stylename="c-edit-window-actions">
            <button id="windowClose" action="windowClose" icon="theme://actions.Editor.Cancel.icon"/>
        </hbox>
    </layout>
</window>
