<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.components.imap.web.imapmessage.ImapMessageEdit"
        datasource="imapMessageDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.components.imap.web.imapmessage">
    <dsContext>
        <datasource id="imapMessageDs"
                    class="com.haulmont.components.imap.entity.ImapMessage"
                    view="imap-msg-full"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="imapMessageDs"
                    editable="false">
            <column width="250px">
                <field property="folder"/>
                <field property="msgUid"/>
                <field property="threadId"/>
                <field property="referenceId"/>
                <field property="caption"/>
                <field property="flags"
                       rows="5"/>
            </column>
        </fieldGroup>
        <hbox spacing="true"
              stylename="c-edit-window-actions">
            <button id="windowClose"
                    action="windowClose"
                    icon="100"/>
        </hbox>
    </layout>
</window>
