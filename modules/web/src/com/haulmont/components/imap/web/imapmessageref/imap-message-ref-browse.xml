<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.components.imap.web.imapmessageref.ImapMessageRefBrowse"
        focusComponent="imapMessageRefsTable"
        lookupComponent="imapMessageRefsTable"
        messagesPack="com.haulmont.components.imap.web.imapmessageref">
    <dsContext>
        <groupDatasource id="imapMessageRefsDs"
                         class="com.haulmont.components.imap.entity.ImapMessageRef"
                         view="msg-ref-full">
            <query>
                <![CDATA[select e from imapcomponent$ImapMessageRef e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="imapMessageRefsTable"
            spacing="true">
        <filter id="filter"
                applyTo="imapMessageRefsTable"
                datasource="imapMessageRefsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="imapMessageRefsTable"
                    width="100%">
            <actions>
                <action id="edit"/>
            </actions>
            <columns>
                <column id="folder"/>
                <column id="caption"/>
                <column id="flagged"/>
                <column id="answered"/>
                <column id="seen"/>
                <column id="updatedTs"/>
            </columns>
            <rows datasource="imapMessageRefsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="editBtn"
                        action="imapMessageRefsTable.edit"
                        caption="View"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
