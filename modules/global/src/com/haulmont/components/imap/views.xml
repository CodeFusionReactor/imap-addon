<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.haulmont.components.imap.entity.MailBox"
          extends="_local"
          name="mailbox-edit">
        <property name="authentication"
                  view="_local"/>
        <property name="folders"
                  view="_minimal"/>
        <property name="rootCertificate"
                  view="_minimal"/>
    </view>
    <view class="com.haulmont.components.imap.entity.MailFolder"
          extends="_local"
          name="mailFolder-edit">
        <property name="events"
                  view="_minimal"/>
        <property name="mailBox"
                  view="_minimal"/>
    </view>
    <view class="com.haulmont.components.imap.entity.MailBox"
          extends="_local"
          name="mailBox-connect">
        <property name="rootCertificate"
                  view="_minimal"/>
        <property name="clientCertificate"
                  view="_minimal"/>
        <property name="authentication"
                  view="_minimal">
            <property name="username"/>
            <property name="password"/>
        </property>
    </view>
    <view class="com.haulmont.components.imap.entity.ImapMessageRef"
          extends="_local"
          name="msg-ref-full">
        <property name="folder"
                  view="_minimal">
            <property name="mailBox"
                      view="mailBox-connect"/>
        </property>
    </view>
    <view class="com.haulmont.components.imap.entity.MailFolder"
          extends="_local"
          name="mailFolder-with-box">
        <property name="mailBox"
                  view="mailBox-connect"/>
    </view>
</views>
