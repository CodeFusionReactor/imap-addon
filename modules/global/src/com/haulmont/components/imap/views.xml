<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.haulmont.components.imap.entity.ImapFolder"
          extends="_local"
          name="imap-folder-edit">
        <property name="events"
                  view="_local"/>
        <property name="mailBox"
                  view="_minimal"/>
    </view>
    <view class="com.haulmont.components.imap.entity.ImapMailBox"
          extends="_local"
          name="imap-mailbox-edit">
        <property name="authentication"
                  view="_local"/>
        <property name="folders"
                  view="imap-folder-edit"/>
        <property name="rootCertificate"
                  view="_minimal"/>
    </view>
    <view class="com.haulmont.components.imap.entity.ImapMailBox"
          extends="_local"
          name="imap-mailBox-connect">
        <property name="rootCertificate"
                  view="_minimal"/>
        <property name="clientCertificate"
                  view="_minimal"/>
        <property name="authentication"
                  view="_minimal">
            <property name="username"/>
            <property name="password"/>
        </property>
    </view>
    <view class="com.haulmont.components.imap.entity.ImapMessage"
          extends="_local"
          name="imap-msg-full">
        <property name="folder"
                  view="_minimal">
            <property name="mailBox"
                      view="imap-mailBox-connect"/>
        </property>
    </view>
    <view class="com.haulmont.components.imap.entity.ImapMessageAttachment"
          extends="_local"
          name="imap-msg-attachment-full">
        <property name="imapMessage"
                  view="imap-msg-full"/>
    </view>
</views>
